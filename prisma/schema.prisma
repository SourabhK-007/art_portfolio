generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  clerkId   String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())
  role      String?
}

model Post {
  id        String   @id @default(cuid())
  type      String?
  name      String?
  imageUrl  String?
  createdAt DateTime @default(now())
}

model Testimony {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  fullname  String
  textimony String
  email     String
  imgUrl    String
}
